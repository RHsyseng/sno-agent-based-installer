apiVersion: config.openshift.io/v1
kind: OperatorHub
metadata:
  name: cluster
spec:
  sources:
  - disabled: {% if container_registry is not defined or 'redhat-marketplace' in container_registry.disable_catalogsources %}true{% else %}false{% endif %}
    name: redhat-marketplace
  - disabled: {% if container_registry is not defined or  'community-operators' in container_registry.disable_catalogsources %}true{% else %}false{% endif %}
    name: community-operators
  - disabled: {% if container_registry is defined and 'redhat-operators' in container_registry.disable_catalogsources %}true{% else %}false{% endif %}
    name: redhat-operators
  - disabled: {% if container_registry is defined and 'certified-operators' in container_registry.disable_catalogsources %}true{% else %}false{% endif %}
    name: certified-operators
